mixin content-header(text)
  .content__header
    .title 
      h1=text 
    .header__nav
      +header-nav

mixin content-header-ico(ico,text)
  .content__header.--ico
    .title 
      .content-header-ico 
        +svgsprite(ico)
      h1=text 
    .header__nav
      +header-nav

mixin header-back(text)
  .content__header.--back
    a.back(href="#") 
      +svgsprite('back')
    h1=text 

mixin header-ico(ico,text)
  .content__header.--ico
    .title 
      .content-header-ico 
        +svgsprite(ico)
      h1=text 

mixin status(ico, text)
  .status
    +svgsprite(ico)
    span.text-regular-big=text

mixin search(text)
  .search 
    input.search__input(type="text" placeholder=text)
    .search__ico 
      +svgsprite('search')
  
mixin btn-download(text)
  a.btn-download(href="#" download) 
    +svgsprite('download')
    span=text

mixin btn-add-transparent(text)
  button.btn-add-transparent=text

mixin select(placeholderText, ...items)
  .select 
    .select__main
      input(type="text" disabled placeholder=placeholderText)
    .select__drop 
      each item in items
        .select__item 
          .select__check 
            +svgsprite('select-check')
            span=item

mixin calendar(placeholderText)
  .select 
    .select__main
      input#calendar(type="text" placeholder=placeholderText)

mixin calendar-mobile(placeholderText)
  .select 
    .select__main
      input#calendar-mobile(type="text" placeholder=placeholderText)

