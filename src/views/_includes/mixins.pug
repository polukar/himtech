mixin svgsprite(name)
  svg(class="svgsprite _" + name)&attributes(attributes)
    use(xlink:href="assets/img/sprites/svgsprites.svg#" + name)

mixin count(description)
  .count 
    .count__minus.count__btn
      +svgsprite('minus')
    .count__input
      .count__description=description
      input(type="text" value="1")
    .count__plus.count__btn
      +svgsprite('plus')

mixin tag(className, text)
  .tag(class=className)=text

mixin input(placeholderText, typeItem)
  .input 
    input(type=typeItem placeholder=placeholderText)
    if block
      block

mixin btn-large(text)
  button.btn.--large=text

mixin btn-add(text)
  button.btn.--add
    +svgsprite('add')
    span=text

mixin btn-small(text)
  button.btn.--small=text

mixin btn-gray(text)
  button.btn.--gray=text

mixin btn-medium(text)
  button.btn.--medium=text

